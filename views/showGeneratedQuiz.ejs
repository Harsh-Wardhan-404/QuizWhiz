<% layout('layouts/boilerplate') %>

  <form action="/showQuiz" method="POST">
    <% questions.forEach(question=> { %>
      <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= question.question %>
              </h5>
              <p class="card-text">
                <% question.options.forEach(option=> { %>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="0<%= question._id %>"
                      id="option<%= option.label %><%= question._id %>">
                    <label class="form-check-label" for="option<%= option.label %><%= question._id %>">
                      <%= option.label %>: <%= option.text %>
                    </label>
                  </div>
                  <% }); %>
              </p>
              <div class="btn-group">
                <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  Show Answer
                </button>
                <ul class="dropdown-menu">
                  <li class="dropdown-item">
                    <%= question.correctAnswer %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
  </form>